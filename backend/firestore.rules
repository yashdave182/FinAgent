rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.uid in ['admin_uid_placeholder']; // Replace with actual admin UIDs
    }

    // =========================================================================
    // Users Collection
    // =========================================================================
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if isOwner(userId) || isAdmin();

      // Allow users to create their own profile during registration
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Allow users to update their own profile
      allow update: if isOwner(userId) || isAdmin();

      // Prevent users from deleting profiles (only admin can)
      allow delete: if isAdmin();
    }

    // =========================================================================
    // Loan Applications Collection
    // =========================================================================
    match /loan_applications/{loanId} {
      // Allow users to read their own loan applications
      allow read: if isAuthenticated() &&
                     (resource.data.user_id == request.auth.uid || isAdmin());

      // Allow authenticated users to create loan applications
      // Ensure user_id in the document matches the authenticated user
      allow create: if isAuthenticated() &&
                       request.resource.data.user_id == request.auth.uid;

      // Allow users to update their own loan applications
      // Prevent changing user_id after creation
      allow update: if isAuthenticated() &&
                       resource.data.user_id == request.auth.uid &&
                       request.resource.data.user_id == resource.data.user_id;

      // Only admin can delete loan applications
      allow delete: if isAdmin();
    }

    // =========================================================================
    // Admin Access (Full Read/Write for Admins)
    // =========================================================================
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // =========================================================================
    // Backend Service Access
    // Note: For backend server operations, use Firebase Admin SDK which
    // bypasses these rules. These rules are primarily for client-side access.
    // =========================================================================
  }
}
